{
    "name": "app/secure-php-framework",
    "description": "Secure PHP Application Framework with JWT, PSR-4, and API support",
    "type": "project",
    "license": "MIT",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "firebase/php-jwt": "^6.10",
        "guzzlehttp/psr7": "^2.6",
        "monolog/monolog": "^3.5",
        "mpdf/mpdf": "^8.2",
        "rakit/validation": "^1.4",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "System\\": "system/"
        },
        "files": [
            "system/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "serve": "php -S localhost:8000 -t public",
        "test": "phpunit",
        "analyse": "phpstan analyse src system --level=5"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
